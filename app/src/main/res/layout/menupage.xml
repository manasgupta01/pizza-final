<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F7"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Poster CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/posterCardView"
        android:layout_width="match_parent"
        app:cardCornerRadius="32dp"
        android:layout_height="200dp"
        android:elevation="10dp"
        android:layout_margin="32dp">

        <ImageView
            android:id="@+id/posterImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@color/white"

            android:src="@drawable/poster_image" />

    </androidx.cardview.widget.CardView>

    <!-- Switches Container -->
    <LinearLayout
        android:id="@+id/switchesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/posterCardView"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:padding="8dp">

        <!-- Veg Switch and Label -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <Switch
                android:id="@+id/vegSwitch"
                android:layout_width="48dp"
                android:layout_height="48dp"
                   android:textOff=""
                android:textOn="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veg"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Non-Veg Switch and Label -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="24dp">

            <Switch
                android:id="@+id/nonVegSwitch"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:textOff=""
                android:textOn="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non-Veg"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/foodRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="316dp"
        android:layout_below="@id/switchesContainer"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="76dp"
        android:clipToPadding="false"
        android:padding="8dp" />

    <Button
        android:id="@+id/cartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />

</RelativeLayout>
